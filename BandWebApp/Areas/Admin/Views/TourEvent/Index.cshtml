@model List<TourEvent>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Tour List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TourEvent" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Create New Tour Event
            </a>

        </div>
    </div>
</div>
<div class="container">
<table class="table table-bordered table striped">
    <thead>
    <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Venue</th>
            <th>City</th>
            <th>Country</th>
    </tr>
    </thead>
    <tbody>

        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Date.ToString("dd/MM/yyyy")</td>
                <td>@obj.Date.ToString("HH:mm")</td>
                <td>@obj.Venue</td>
                <td>@obj.City</td>
                <td>@obj.Country</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="TourEvent" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="TourEvent" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-x-lg"></i> Delete
                        </a>
                    </div>
                </td>
        </tr>
        }
    </tbody>
</table>
</div>